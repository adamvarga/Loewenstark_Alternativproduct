<?php $_products = $this->getProducts(); ?><?php $current_product = Mage::registry('current_product'); ?><?php $stockItem = $current_product->getStockItem(); ?><?php if ($_products->count() > 0 && (!$stockItem->getIsInStock())): ?>    <div class="section-title alterproduct-title"><span><?php echo $this->__('Alternative Products') ?></span></div>    <div class="section-content alter-products">        <div class="alterproduct-slider">            <?php foreach ($_products as $_product): ?>                <div class="item">                    <div class="product-image">                        <a href="<?php echo $_product->getProductUrl(); ?>" title="<?php echo $_product->getName() ?>">                            <img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(175); ?>" alt="<?php echo $_product->getName() ?>"/>                        </a>	                    </div>                    <div class="product-name">                        <a href="<?php echo $_product->getProductUrl(); ?>" title="<?php echo $_product->getName() ?>">                            <?php $remainder = ''; ?>                            <?php echo Mage::helper('core/string')->truncate($_product->getName(), 52, '...', $remainder, true); ?>                        </a>                    </div>                    <div class="product-price">                        <?php echo $this->getPriceHtml($_product, true); ?>	                    </div>                </div>	            <?php endforeach; ?>        </div>    </div>    <script type="text/javascript">        //JS Slider Settings SEE - http://kenwheeler.github.io/slick/        jQuery(document).ready(function () {            jQuery('.alterproduct-slider').slick({                slidesToShow: 4,                touchThreshold: 7            });        });    </script><?php endif; ?> 